<div class="row">
  <div class="col s10 offset-s1">
    <h1>Забыли пароль?</h1>
    {{#if resetError}}
    <div class="row">
      <div class="col">
        <p class="alert">
          {{resetError}}
        </p>
      </div>
    </div>
    {{/if}}

    <form class="" action="/auth/reset" method="POST">
      <div class="row">
        <div class="input-field col s8 offset-s2">
          <input placeholder="example@mai.ru" name="email" id="email" type="text" class="validate" required>
          <label for="email">E-mail</label>
          <span class="helper-text" data-error="Введите E-mail"></span>
        </div>
      <input type="hidden" name="_csrf" value={{csrf}}>
      </div>

      <div class="row">
        <div class="col col s8 offset-s2">
          <button class="btn btn-large waves-effect waves-light" type="submit" name="action">Сбросить</button>
        </div>
      </div>
    </form>
  </div>
</div>