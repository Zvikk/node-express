<div class="row">
  <div class="col s10 offset-s1">
    <h1>Новый пароль</h1>
    <form class="" action="/auth/password" method="POST">
      <div class="row">
        <div class="input-field col s8 offset-s2">
          <input placeholder="example@mai.ru" name="password" id="password" type="text" class="validate" required>
          <label for="password">Пароль</label>
          <span class="helper-text" data-error="Введите новый пароль"></span>
        </div>

      <input type="hidden" name="_csrf" value={{csrf}}>
      <input type="hidden" name="userId" value={{userId}}>
      <input type="hidden" name="token" value={{token}}>
      </div>

      <div class="row">
        <div class="col col s8 offset-s2">
          <button class="btn btn-large waves-effect waves-light" type="submit" name="action">Установить новый пароль</button>
        </div>
      </div>
    </form>
  </div>
</div>